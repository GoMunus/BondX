# BondX Frontend Environment Configuration

# API Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_WS_BASE_URL=ws://localhost:8000

# Authentication
VITE_AUTH_ENABLE_DEMO=true
VITE_AUTH_TOKEN_STORAGE_KEY=bondx_auth_token

# Development
VITE_APP_ENV=development
VITE_DEBUG_MODE=true

# Refresh intervals (in seconds)
VITE_PORTFOLIO_REFRESH_INTERVAL=30
VITE_RISK_REFRESH_INTERVAL=60
VITE_TRADING_REFRESH_INTERVAL=10
VITE_MARKET_REFRESH_INTERVAL=30

# WebSocket configuration
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_DELAY=1000

# UI Configuration
VITE_DASHBOARD_DEFAULT_LAYOUT=grid
VITE_ENABLE_ANIMATIONS=true
